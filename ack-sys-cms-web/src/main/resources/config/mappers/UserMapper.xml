<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ack.sys.cms.persist.mapper.UserMapper">
	<resultMap id="BaseResultMap"
		type="org.ack.sys.cms.pojo.User">
		<id column="id" property="id" />
		<id column="username" property="username" />
		<result column="password" property="password" />
		<result column="realName" property="realName" />
		<result column="email" property="email" />
		<result column="address" property="address" />
		<result column="type" property="type" />
		<result column="state" property="state" />
		<result column="qq" property="qq" />
		<result column="mobile" property="mobile" />
		<result column="avatar" property="avatar" />
		<result column="creator" property="creator" />
		<result column="createTime" property="createTime" />
		<result column="modifier" property="modifier" />
		<result column="modifyTime" property="modifyTime" />
		<result column="deleteStatus" property="deleteStatus" />
		
	</resultMap>
	<resultMap type="org.ack.sys.cms.pojo.User" id="UserPageResultMap" extends="BaseResultMap">
	    <result column="departmentName" property="departmentName" />
	    <association property="department" javaType="org.ack.sys.cms.pojo.Department">
	       <id property="id" column="dept_id"/>
	       <result property="name" column="dept_name"/>
	    </association>
	</resultMap>
	<sql id="Base_Column_List">
		id, username, type, state, email, realName, qq, mobile,address
		avatar, creator, createtime, modifier, modifyTime,deleteStatus
	</sql>
	<select id="findInterceptorPageList" parameterType="org.ack.sys.base.persist.page.Page" resultMap="UserPageResultMap">
	    SELECT
			cu.id,
			cu.username,
			cu.type,
			cu.state,
			cu.email,
			cu.realName,
			cu.qq,
			cu.mobile,
			cu.avatar,
			cu.address,
			cu.creator,
			cu.createtime,
			cu.modifier,
			cu.modifyTime,
			cu.deleteStatus,
			cd.id AS dept_id,
			cd.`name` AS dept_name
		FROM
			cms_user cu
		LEFT JOIN cms_department cd ON cu.departmentId = cd.id
		<where>
		   1 = 1
		   <if test="condition.username != null and condition.username !=''">
				and username=#{condition.username}
		   </if>
		   <if test="condition.email != null and condition.email !=''">
				and email=#{condition.email}
		   </if>
		</where>
	</select>
	
	<insert id="insert"  useGeneratedKeys="true" keyProperty="id">
		INSERT INTO cms_user (username, password, type,
		state, email, realName, qq, address, creator,
		createtime, mobile, avatar, modifier,modifyTime,deleteStatus)
		VALUES
		(#{username}, #{password}, #{type}, #{state}, #{email}, #{realName},
		#{qq},#{address}, #{creator}, #{createTime},#{mobile},#{avatar},#{modifier}, #{modifyTime},#{deleteStatus})
	</insert>
	<select id="findUserByUserName" parameterType="string"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from cms_user
		where username = #{username}
	</select>
	<select id="find" parameterType="org.ack.sys.cms.pojo.User"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from cms_user
		where id = #{id}
	</select>
	<select id="findById" parameterType="int" resultMap="UserPageResultMap">
		select
		<include refid="Base_Column_List" ></include>
		from cms_user
		where id = #{id}
	</select>

</mapper>